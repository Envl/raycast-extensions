{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "timezone-buddy",
  "title": "Timezone Buddy",
  "description": "Show friends in other timezones",
  "icon": "icon.png",
  "author": "andrebreia",
  "contributors": [
    "jelias",
    "xulobeats",
    "pernielsentikaer"
  ],
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "timezone-buddy",
      "title": "Timezone Buddy",
      "description": "View buddies and the time for their timezones.",
      "mode": "view"
    },
    {
      "name": "timezone-buddy-menubar",
      "title": "Timezone Buddy Menu Bar",
      "description": "See your buddies at a glance",
      "mode": "menu-bar"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.1",
    "@raycast/utils": "^2.2.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
